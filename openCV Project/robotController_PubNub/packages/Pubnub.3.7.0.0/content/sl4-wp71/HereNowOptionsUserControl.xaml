<UserControl x:Class="PubnubWindowsPhone.HereNowOptionsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Height="480" Width="451">
        <StackPanel HorizontalAlignment="Stretch" Margin="12,12,150,150" Name="stackPanel1" VerticalAlignment="Stretch">
            <CheckBox IsChecked="true" Name="chkHereNowShowUUID">Show UUID</CheckBox>
            <CheckBox IsChecked="false" Name="chkHereIncludeUserState">Include User State</CheckBox>
            
            <Button Content="OK" Height="71" Name="btnOK" Width="150" HorizontalContentAlignment="Center" />
            <Button Content="Cancel" Height="70" Name="btnCancel" Width="150" HorizontalContentAlignment="Center" />
        </StackPanel>
    </Grid>

</UserControl>