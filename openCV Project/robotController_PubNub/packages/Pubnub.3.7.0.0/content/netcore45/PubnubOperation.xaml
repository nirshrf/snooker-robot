<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="PubnubWindowsStore.PubnubOperation"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PubnubWindowsStore"
    xmlns:common="using:PubnubWindowsStore.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Unloaded="Page_Unloaded">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="Pubnub C# Demo" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="103,23,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Channel:" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtChannel" HorizontalAlignment="Left" Margin="188,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="my_channel_pandu" VerticalAlignment="Top" Width="257"/>
        <TextBox x:Name="txtChannelGroup" HorizontalAlignment="Left" Margin="188,55,0,0" Grid.Row="1" TextWrapping="Wrap" Text="my_channel_group" VerticalAlignment="Top" Width="257"/>

        <Button Content="Subscribe" HorizontalAlignment="Left" Margin="55,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="42" Click="btnSubscribe_Click"/>
        <Button Content="Presence" HorizontalAlignment="Left" Margin="185,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="143" Height="42" Click="btnPresence_Click"/>
        <Button Content="Publish" HorizontalAlignment="Left" Margin="340,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Click="btnPublish_Click"/>

        <Button Content="History" HorizontalAlignment="Left" Margin="55,183,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Click="btnHistory_Click"/>
        <Button Content="GlobalHereNow" HorizontalAlignment="Left" Margin="185,183,0,0" Grid.Row="1" VerticalAlignment="Top" Width="143" Click="btnGlobalHereNow_Click"/>
        <Button Content="HereNow" HorizontalAlignment="Left" Margin="340,183,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Click="btnHereNow_Click"/>

        <Button Content="Unsub" HorizontalAlignment="Left" Margin="55,237,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="40" Click="btnUnsubscribe_Click"/>
        <Button Content="Presence-Unsub" HorizontalAlignment="Left" Margin="185,237,0,0" Grid.Row="1" VerticalAlignment="Top" Width="143" Height="40" Click="btnPresenceUnsub_Click"/>
        <Button Content="Time" HorizontalAlignment="Left" Margin="340,237,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="40" Click="btnTime_Click"/>

        <Button Content="PAM" HorizontalAlignment="Left" Margin="55,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="40" Click="btnPAMChannel_Click"/>
        <Button Content="PAM CG" HorizontalAlignment="Left" Margin="185,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="143" Height="40" Click="btnPAMChannelGroup_Click"/>
        <!--<Button Content="Grant" HorizontalAlignment="Left" Margin="55,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="40" Click="btnGrant_Click"/>
        <Button Content="Grant Presence" HorizontalAlignment="Left" Margin="185,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="143" Height="40" Click="btnGrantPresence_Click"/>-->
        <!--<Button Content="Revoke" HorizontalAlignment="Left" Margin="340,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="40" Click="btnRevoke_Click"/>-->

        <!--<Button Content="Audit" HorizontalAlignment="Left" Margin="55,348,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="40" Click="btnAudit_Click"/>
        <Button Content="Audit Presence" HorizontalAlignment="Left" Margin="185,348,0,0" Grid.Row="1" VerticalAlignment="Top" Width="143" Height="40" Click="btnAuditPresence_Click"/>-->
        <Button Content="User State" HorizontalAlignment="Left" Margin="340,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="40" Click="btnUserState_Click"/>

        <Button Content="WhereNow" HorizontalAlignment="Left" Margin="55,343,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108" Height="40" Click="btnWhereNow_Click"/>
        <Button Content="Change UUID" HorizontalAlignment="Left" Margin="185,343,0,0" Grid.Row="1" VerticalAlignment="Top" Width="143" Height="40" Click="btnChangeUUID_Click"/>
        <Button Content="ChannelGroup" HorizontalAlignment="Left" Margin="340,343,0,0" Grid.Row="1" VerticalAlignment="Top" Width="143" Height="40" Click="btnChannelGroup_Click"/>

        <Button Content="Disconnect/Retry" HorizontalAlignment="Left" Margin="55,394,0,0" Grid.Row="1" VerticalAlignment="Top" Width="185" Height="40" Click="btnDisconnectRetry_Click"/>
        <Button Content="Disable Network" HorizontalAlignment="Left" Margin="272,394,0,0" Grid.Row="1" VerticalAlignment="Top" Width="185" Height="40" Click="btnDisableNetwork_Click"/>
        <Button Content="Enable Network" HorizontalAlignment="Left" Margin="272,445,0,0" Grid.Row="1" VerticalAlignment="Top" Width="185" Height="40" Click="btnEnableNetwork_Click"/>

        <TextBox x:Name="txtResult" HorizontalAlignment="Left" Margin="507,5,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="655" Height="443" IsReadOnly="True" AcceptsReturn="True"/>
        <Button Content="Home" HorizontalAlignment="Left" Margin="560,464,0,0" Grid.Row="1" VerticalAlignment="Top" Click="btnHome_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="55,55,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Width="123" Text="Channel Group:"/>
        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>
